{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
